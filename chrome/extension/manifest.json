{
   "name": "Bugzilla HelpPurr",
   "description": "Extension for making Bugzilla even better",
   "version": "1.0",
   "manifest_version": 3,
   "background": {
      "service_worker": "background.js"
   },
   "permissions": ["storage", "activeTab", "scripting"],
   "action": {
      "default_popup": "popup.html",
      "default_icon": {
         "16": "/images/bz_helppurr16.png",
         "32": "/images/bz_helppurr32.png",
         "48": "/images/bz_helppurr48.png",
         "128": "/images/bz_helppurr128.png"
      }
   },
   "icons": {
     "16": "/images/bz_helppurr16.png",
     "32": "/images/bz_helppurr32.png",
     "48": "/images/bz_helppurr48.png",
     "128": "/images/bz_helppurr128.png"
   }
}
